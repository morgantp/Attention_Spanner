<div class="container">
    <form action="/addPost" method="POST">
        <div class="form-group">
            <label>Title:</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Enter A Title">
        </div>
        <div class="form-group">
            <label>Body:</label>
            <textarea type="text" class="form-control" id="body" name="body" rows="15" placeholder="Write Your Post Here"></textarea>
        </div>
        <div id="buttonHolder">
            <input id="sendPost" type="submit" value="Post" class="btn btn-primary">
        </div>
    </form>
</div>